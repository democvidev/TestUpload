{{ form_start(form) }}
{{ form_widget(form) }}
{#VÃ©rifier si la route est 'post_edit' pour afficher les images#}
{% if app.request.attributes.get('_route') == 'post_edit'  %}
	<h2>Images</h2>
	<div class="d-flex justify-content-around">
		{% for image in post.images %}
			<div class="mx-2 d-flex flex-column text-center">
				<img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="100">
				<a href="{{ path('post_delete_image', {'id':image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
			</div>
		{% endfor %}
	</div>
{% endif %}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
